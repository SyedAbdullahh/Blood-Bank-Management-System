@model WebApplication4.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Employee Name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.e_Name)
        </dd>
        <dt class = "col-sm-2">
            Email:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.e_Email)
        </dd>
       
        <dt class = "col-sm-2">
            Centre ID:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.e_centre_id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="e_Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        
    </form>
</div>
