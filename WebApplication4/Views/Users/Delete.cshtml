@model WebApplication4.Models.User

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout_c.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            UserName:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.u_Name)
        </dd>
        <dt class = "col-sm-2">
            User Email:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.u_Email)
        </dd>
        <dt class = "col-sm-2">
            User Password:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.u_Password)
        </dd>
        <dt class = "col-sm-2">
