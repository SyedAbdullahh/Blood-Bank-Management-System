@model WebApplication4.Models.Transaction

@{
    ViewData["Title"] = "Open Ticket";
    Layout = "~/Views/Shared/_Layout_u.cshtml";
}

<h1>Open</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form name="myForm" asp-action="Create" onsubmit="return validateForm()" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <label asp-for="u_name" class="control-label">User Name:</label>
                <input asp-for="u_name" class="form-control" value="@ViewBag.u_name" readonly />

            </div>
            <div class="form-group">

                <label asp-for="u_id" class="control-label">User ID:</label>
                <input asp-for="u_id" class="form-control" value="@ViewBag.u_id" readonly />

            </div>
            <div class="form-group">


                <label asp-for="h_id" class="control-label">Hospital ID:</label>
                <input asp-for="h_id" class="form-control" value="@ViewBag.h_id" readonly />

            </div>
             <div class="form-group">
              @*  <label asp-for="b_id" class="control-label"></label>*@
                <input type="hidden" asp-for="b_id" class="form-control" value="@ViewBag.b_id" readonly/>

                @*<span asp-validation-for="b_id" class="text-danger"></span>*@
            </div>
            <div class="form-group">

                <label asp-for="t_bloodtype" class="control-label">Blood Type:</label>
                <input asp-for="t_bloodtype" class="form-control" value="@ViewBag.blood" readonly />

            </div>

            <input type="hidden" asp-for="t_status" name="t_status" value="Pending" />
            <div class="form-group">

                <label asp-for="t_type" class="control-label">Ticket Type:</label>
                <input asp-for="t_type" class="form-control" value="@ViewBag.t_type" readonly />

            </div>
            <div class="form-group">

                <label asp-for="t_bloodquantity" class="control-label">Blood Quantity:</label>
                <input  name="t_bloodquantity" asp-for="t_bloodquantity" class="form-control" id="t_bloodquantity"  />
                <span asp-validation-for="t_bloodquantity" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="t_bloodprice" class="control-label">Price:</label>
                <input asp-for="t_bloodprice" class="form-control" value="@ViewBag.b_price" readonly />

            </div>
            <div class="form-group">
                <label asp-for="t_date" class="control-label">Current Time:</label>
                <input asp-for="t_date" class="form-control" value="@DateTime.Now" readonly />
                 


            </div>
            <div class="form-group">
                <input type="hidden" asp-for="b_id" class="form-control" value=@ViewData["id"] readonly />
               
            </div>
            <div class="form-group">
                <input type="submit"  value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>



<script>
    function validateForm() {
        let x = document.getElementById("t_bloodquantity").value;
        let av_q = parseInt('@ViewBag.av_q');
        if (x > av_q||x<=0) {
            alert("Quantity must be less than or equal to quantity available i.e. " + av_q);
            return false;
        }
        return true;
    }
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
