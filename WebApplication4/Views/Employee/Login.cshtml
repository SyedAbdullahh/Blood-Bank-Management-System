@model WebApplication4.Models.Employee

@{
    ViewData["Title"] = "Employee Login";
}

<h1>Login</h1>

<h4>Employee Portal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="e_Id" class="control-label">Employee ID:</label>
                <input type="number" asp-for="e_Id" class="form-control" placeholder="Enter ID"/>
                <span asp-validation-for="e_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="e_Password" class="control-label">Employee Password:</label>
                <input type="password" asp-for="e_Password" class="form-control" />
                <span asp-validation-for="e_Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



