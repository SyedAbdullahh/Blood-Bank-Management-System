@model WebApplication4.Models.Admin

@{
    ViewData["Title"] = "Admin Login";
}

<h1>Login</h1>

<h4>Admin Portal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">ID:</label>
                <input type="number" asp-for="Id" class="form-control" placeholder="Enter ID"/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label">Password:</label>
                <input type="password" asp-for="password" class="form-control" placeholder="Enter Password" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            @if (ViewBag.v == true)
            {
                <div class="form-group">
                    <p class="text-danger">Incorrect Admin ID or Password</p>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



