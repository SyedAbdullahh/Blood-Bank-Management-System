@model WebApplication4.Models.City

@{
    ViewData["Title"] = "Edit City";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>Edit</h1>

<h4>City</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="c_id" />
            <div class="form-group">
                <label asp-for="c_name" class="control-label">City Name:</label>
                <input asp-for="c_name" class="form-control" />
                <span asp-validation-for="c_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



